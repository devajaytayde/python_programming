#2. Read Test Case file from local folder and mark "Executed" column as "Y"

#Declaring global variable 
strExecution = ""
iColExecuted = 2
iStepCounter = 0
#Reading Test case file
with open("tc_keyword.csv","r") as file:
  for line in file:
    if line != '\n':            
      # Convert Change list value of "Executed" column to "Y" and store in local String variable again   
      lst = line.strip().split(",")
      stepCounter = stepCounter + 1
      if stepCounter > 1:
        lst[iColExecuted] = 'Y'
      if strExecution == '':
        strExecution = strTestCasesSep.join(lst)
      else:
        strExecution = strExecution + '\n' + strTestCasesSep.join(lst)

#Erasing older file content and Writing the updated Test Cases back to original file
with open("tc_keyword.csv","w") as file2:
  file2.writelines(strExecution)

